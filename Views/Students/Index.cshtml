@model List<MvcStudentDemo.Models.Student>

<h2>Danh sách sinh viên</h2>
<a asp-action="Create" class="btn btn-primary">Thêm mới</a>

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Tuổi</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var s in Model)
    {
        <tr>
            <td>@s.Name</td>
            <td>@s.Age</td>
            <td>
                <a asp-action="Edit" asp-route-id="@s.Id" class="btn btn-warning">Sửa</a>
                <a asp-action="Delete" asp-route-id="@s.Id" class="btn btn-danger">Xóa</a>
            </td>
        </tr>
    }
    </tbody>
</table>
